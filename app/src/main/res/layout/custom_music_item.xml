<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivMusic"
        android:src="@drawable/ic_music"/>


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/ivMusic"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="-2dp"
        android:gravity="center_vertical"
        android:text="Song name"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtSinger"
        android:layout_width="53dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/ivMusic"
        android:layout_alignParentTop="true"
        android:layout_marginStart="198dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="-301dp"
        android:layout_marginBottom="-6dp"
        android:layout_toLeftOf="@+id/ivMusic"
        android:layout_toEndOf="@+id/ivMusic"
        android:text="Singer"
        android:textColor="#fff"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_marginTop="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/ivStop"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_play_circle" />

    <ImageView
        android:id="@+id/ivStop"
        android:layout_marginTop="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_stop_circle" />

</RelativeLayout>